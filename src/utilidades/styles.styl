.button    
  color: $white-proyect;
  background-color: $header-color;
  padding: 1em 3em;
  //margin: 2em 0 4em;
  box-shadow: -2px 4px 13px -3px black;
  border: solid transparent;
  border-radius: 4px;
  transition background-color .3s ease
  &:hover
    background-color #C50E5B
  
  &-contacto
    
    width 207px
    height 70px
    color: $white-proyect;
    background-color: $header-color;
    padding: 1em 3em;
    margin .5em 1em .5em 1em
    box-shadow: -2px 4px 13px -3px black;
    text-transform: uppercase;
    border: solid transparent;
    border-radius: 4px;
    font-weight: 700;
    transition background-color .3s ease
    &:hover
      background-color #C50E5B
  &-green
    
    width 207px
    height 70px
    background-color #92B331
    color: $white-proyect;
    padding: 1em 3em;
    margin .5em 1em .5em 1em
    box-shadow: -2px 4px 13px -3px black;
    border: solid transparent;
    border-radius: 4px;
    transition background-color .3s ease
    text-transform: uppercase;
    font-weight: 700;
    &:hover
      background-color #a0c533
  &-white-pink
    width 207px
    background-color $white-proyect
    color: $header-color;
    padding: 1em 3em;
    margin .5em 1em .5em 1em
    box-shadow: -2px 4px 13px -3px black;
