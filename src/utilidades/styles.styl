// boton cicular
.button-circle
  display flex
  position absolute
  top .5em
  right .5em
  height 70px
  width 70px
  font-size 3em
  border-radius 350px
  background-color #009DEA
  color $white-proyect
  justify-content: center;
  align-items: center;
  box-shadow: -2px 4px 13px -3px #000;
  transition background-color .3s ease

  &:hover
    background-color $white-proyect
    color #009DEA
    
