.contacto
  width: 12%
  min-width: 136px

@media (max-width: 1000px)
  .contacto
    width 100%

.size-img
  width: 100%


.size-image
  width: 100%
.title-brand
  font-size 1.2em
  &--bd
    font-size .8em
    margin-left .5em
    font-style italic

.navbar {
  background: $header-color2
  .toggle, 
  .brand {
    display: flex;
    align-items center
  }
  .link {
    display: flex;
    //width: 100%
    //align-items: stretch; hoy
    //text-align: center;
    //padding: 1.5em;
    text-decoration: none;
    background: $header-color2;
    color: white;
    text-align center
    
    padding: 1.7em 0 1em 0;
    flex-grow: 1;
    justify-content: center;
    
    border-bottom 3.2px solid transparent
    cursor: pointer;


    &:hover {
      background: $rosa-secundario;
      border-bottom: 3.2px solid white
      transition background-color .5s ease

    }
  }
  .brand {
    text-align: center;
    color: white;
    display flex
    margin-right 4em
  }
  .toggle {
    position absolute;
    right 0;
    top  10px;
    padding: 1em;
    color: white;
    vertical-align: middle;
    font-size: 1.2em
    cursor: pointer;
  }
}

.contact
  display flex
  justify-content: center
  a
    padding .8em
    color: white
    font-weight: bold
    font-style: italic
    text-decoration: underline
  .whithout-line
    text-decoration none
    
      
  
.experimento
  position: relative
  text-align: center
  display flex
  flex-direction column

  
.vuela
  position: absolute
  top: 100%
  left 0
  z-index: 1
  background-color: $header-color
  width: 100%
  height: 0px
  margin: 0 auto
  overflow hidden
  display flex
  flex-direction column
  & .contact:hover
    background: $rosa-secundario

//al hacer hover .vuela gana 80px de altura
.experimento:hover .vuela
  height 128px  

//.experimento:hover .vuela
  //height: 140%

@media (min-width: 62.5em) {
    .navbar {
      display: flex;
      .brand{
        margin-right: 12em;
      }
      .left,.right {
        display: flex;
        //align-items center hoy
        flex: 1;
      }
      //modificado hoy
      //.link {
          //width: auto;
      //}
      .right {
        align-items: stretch;


        
      }
      .left {
        justify-content: center;
      }
      .toggle {
        display: none;
      }
    }
}

