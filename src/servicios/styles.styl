////Fin del bloque

///Lista que esta oculta

.box ul {
  font-family: 'Open Sans', Arial, sans-serif;
  color: $white-proyect;
  font-size: 13px;
  line-height: 20px;
  text-indent: 14px;
  margin: 25px;
  margin-top: 380px;
  list-style-type: disc;
}

//No se usasa
.box ul.hidden {
  opacity: 0;
}
//No se usa aun...

//

.box a.expand {
  width: 35px;
  height: 35px;
  background: $white-proyect;
  font-weight: 600;
  color: $header-color2
  display: block;
  margin: 15px auto 25px;
  text-align: center;
  line-height: 35px;
  cursor: pointer;
  
  position: absolute;
  left: 0;
  right: 0;
  bottom: 10px;
  transition all .2s ease
}

//Transicion de el hide del "+"
@media (min-width: 911px)
  .box a.expand
    transition all .4s ease
  
  
///Hace que el menos no se vea cuando
///no esta seleccionado
.box a.expand span.minus {
  opacity: 0;
}
.box a.expand span.plus {
  opacity: 1;
  padding-left: 5px;
}
//Fin del bloque


.box.selected a.expand {
  display: block;
  position: absolute;
  left: 180px;
  right: -29px;
  bottom: -39px;
  width: 80px;
  height: 50px;
  background: #eee;
  color: #036C81;
  transform: rotate(-45deg);
}
.box.selected a.expand span {
  display: block;
  position: absolute;
  top: -4px;
  left: 38px;
  transform: rotate(45deg);
  font-size: 24px;
}
.box.selected a.expand span.minus {
  opacity: 1;
}
.box.selected a.expand span.plus {
  opacity: 0;
}
.box.selected .icon-cont {
  transform: scale(1.5,1.5);
  opacity: 0.3;
  position: absolute;
  top: -20px;
  left: -5px;
  right: 180px;
}
.box.selected:hover .icon-cont {
  animation: none;
}
.box.selected h3 {
  padding: 0px 15px 15px 15px;
  border-bottom: 1px solid rgba(255,255,255,0.3);
  
  top: 15px;
}
.box.selected ul.hidden {
  opacity: 1;
  margin-top: 85px;
}


