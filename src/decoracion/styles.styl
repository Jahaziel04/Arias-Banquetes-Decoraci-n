
//Componente de cajas de +productos

.catalogo_container
  width: 100%
  margin 0 auto
  background-color $green-proyect2
  
.checkbox, .checkbox-content
  clear both
  padding-top 10px
  display none
  
.label-checkbox
  font-weight: 700;
  font-size: 18px;
  display: inline-block-block;
  //float: left;
  width: 100px;
  padding: 1.5em;
  color: #757575;
  cursor: pointer;
  text-decoration: none;
  text-align: center;
  background: #f0f0f0;
  
#check1:checked ~ #content-check1,
#check2:checked ~ #content-check2,
#check3:checked ~ #content-check3,
#check4:checked ~ #content-check4,
#check5:checked ~ #content-check5,
#check6:checked ~ #content-check6,
#check7:checked ~ #content-check7,
#check8:checked ~ #content-check8
  display block
  padding 20px
  background white

.catalogo_container .checkbox-content p,
.catalogo_container .checkbox-content h3
  animation: fadeInScale 0.7s ease-in-out
  
.catalogo_container [id^="check"]:checked + label
  background-color white
  i
    color $green-proyect3

.bgc
  height 90px
  min-width 90px
  width  90px
  min-height 90px
  background-color: red
  display inline-block


.banquete
  &,
  &--menu
    box-sizing border-box
    width 100%
    margin 0 auto
    //box-shadow 0 0 5px rgba(0,0,0,0.4)
    position relative
    min-width 200px
    //height 130px
    border-radius 15px 15px 2px 2px
    margin-top 1em
    margin-bottom 1em
    //box-shadow: 2px 2px 20px #ccc;
    display flex
    flex-direction column
    .listado
      margin-left .5em
      margin-top: .5em
      color $color-grey
      
    &-title
      &,
      &--verde,
      &--rosa
        background-color: #E4E4E4
        padding .5em 0
        box-shadow: 0px 2px 20px #ccc
        text-align: center
        //border-left 6px solid white
        //border-left 6px solid white
         
      &--verde
        background-color: $green-proyect3
        color white
        border-radius 15px 15px 0px 0px
        
      &--rosa
        background-color: $header-color2
        color white
        border-radius: 0 0 100px 100px;
        //cursor pointer
        &:hover
          box-shadow: 2px 2px 20px #bbb;
          transition border-color, height 2s ease
  
  &
    height 130px
    .listado
      margin auto .5em auto .5em
  &--menu
    border: 1px solid rgba(104, 104, 104, 0.11)
 /*
    Es parte la accion en main.js para hacer esconder la lista
      de cada men√∫
    &--menu
    box-shadow 0 0 5px transparent
    .listado
      display none
*/
      

///  

.centrar
  margin 0 auto


.product
  display flex
  flex-direction column
  width: 100%
  align-items center
  //border-bottom 1px solid $green-proyect3
  //border-top 1px solid $green-proyect3
  border-left 1px solid $green-proyect3
  //border-right 1px solid $green-proyect3
  box-shadow: 2px 2px 20px #ccc;
  cursor: pointer;
  transition box-shadow .2s ease
  
  
  
  margin 1.5em 0
  &:hover 
    border-top-color $green-proyect3
    border-bottom-color $green-proyect3
    box-shadow: 2px 2px 20px #bbb;
    z-index: 1
    transition border-color, height 2s ease
    
    .icon-eye-plus
      color $green-proyect3
      transition color .3s ease
    .movespan
      margin-left 1em
      transition margin-left .7s ease
      
  
  &-content
    display none

.product.activo
  .toggle
    background: $header-color;
    color: white;
    

  div
    display: flex;
  figure
    display: flex;

.activo-0-height
  box-shadow 2px 2px 20px #ccc;
  
